@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h2 class="text-center mb-4">Vehicle Data Management</h2>
            <p class="text-center text-muted mb-5">Manage your vehicle data efficiently with our comprehensive tools.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Vehicle Table</h5>
                    <p class="card-text">View and manage all vehicles in the system.</p>
                    <a href="@Url.Action("Vehicle_Table")" class="btn btn-primary">View Vehicles</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Error Vehicle Table</h5>
                    <p class="card-text">View and correct vehicles with processing errors.</p>
                    <a href="@Url.Action("ErrorVehicle_Table")" class="btn btn-primary">View Error Vehicles</a>
                </div>
            </div>
        </div>
    </div>
</div>
